<Gauge Name="Icon Center Panel" Version="C-17" Author="Herbert Pralle">
  <Image Name="Icon_center_panel_open.bmp" Luminous="0"/>
  <Element>
    <Position X="0" Y="0"/>
    <Select>
      <Value>(L:center panel,bool)</Value>
      <Case Value="1">
        <Image Name="Icon_center_panel_close.bmp" Luminous="0"/>
      </Case>
    </Select>
  </Element>
  <Mouse>
    <Tooltip>Open / Close Panel</Tooltip>
    <Cursor Type="Hand"/>
    <Click Repeat="Yes">(L:center panel,bool) ! (>L:center panel,bool) 10002 (>K:PANEL_ID_TOGGLE)</Click>
  </Mouse>
</Gauge>